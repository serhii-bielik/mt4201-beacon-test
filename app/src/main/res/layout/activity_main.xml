            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textBeaconId"
            android:textSize="35sp" app:layout_constraintHorizontal_bias="0.501"/>
    <ImageView
            android:layout_width="384dp"
            android:layout_height="349dp" app:srcCompat="@drawable/map"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
